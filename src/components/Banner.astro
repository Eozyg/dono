<header>
    <img src="/Captura.PNG" alt="Banner Image"/>
</header>
<style>
header {
    width: 100%;
    height: 300px;
    display: flex;
    justify-content: center;
}
</style>

<script>
    const banner = document.querySelector('header img');
     let audio = document.getElementById('background-audio');
    banner.addEventListener('click', () => {
        playBackgroundAudio('/miaumiausad.mp3')
    });

    function playBackgroundAudio(src) {

    if (!audio) {
        audio = document.createElement('audio');
        audio.id = 'background-audio';
        audio.volume = 0.1;
        audio.src = src;
        audio.loop = true;
        audio.autoplay = true;
        audio.style.display = 'none';
        document.body.appendChild(audio);
    } else {
        console.log('segundo click');
        audio.src = src;
        audio.volume = 0.1;
        audio.play();
        setTimeout(() => {
            audio.pause();
        }, 7000);
    }
}
</script>